   "source": [
    "# find the factorial of a number\n",
    "\n",
    "user_input = int(input('Enter the positive integer for which you want to find the factorial: '))\n",
    "\n",
    "factorial = 1\n",
    "\n",
    "while user_input > 0:\n",
    "    factorial *= user_input\n",
    "    user_input -= 1\n",
    "\n",
    "print(f'{factorial:e}')\n",
    "print(f'{factorial}')"
   ]
